# PHPArm Environment Configuration
# Copy this file to .env and update with your settings

# ========================================
# Application Settings
# ========================================
APP_NAME="PHPArm"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000

# ========================================
# Frontend (Vite) Settings
# ========================================
VITE_APP_NAME="PHPArm"
VITE_API_URL=/api
VITE_RECAPTCHA_SITE_KEY=

# ========================================
# Database Configuration
# ========================================
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=phparm
DB_USERNAME=phparm_user
DB_PASSWORD=your_secure_password

# ========================================
# JWT Authentication
# ========================================
# Generate a secure key using: php -r "echo bin2hex(random_bytes(32)) . PHP_EOL;"
JWT_SECRET=generate-a-random-secret-key-here
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=2592000

# ========================================
# Email Configuration
# ========================================
# For development, use Mailtrap.io for testing
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_mailtrap_username
MAIL_PASSWORD=your_mailtrap_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@phparm.local
MAIL_FROM_NAME="${APP_NAME}"

# ========================================
# Payment Gateway Configuration
# ========================================

# Stripe (get keys from: https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Square (get credentials from: https://developer.squareup.com)
SQUARE_ACCESS_TOKEN=
SQUARE_LOCATION_ID=
SQUARE_ENVIRONMENT=sandbox
SQUARE_WEBHOOK_SECRET=

# PayPal (get credentials from: https://developer.paypal.com)
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox
PAYPAL_WEBHOOK_ID=

# ========================================
# File Storage Configuration
# ========================================
# Maximum upload size in bytes (10MB = 10485760)
UPLOAD_MAX_SIZE=10485760
STORAGE_PATH=storage
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# ========================================
# API Configuration
# ========================================
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=60
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ========================================
# VIN Decoder Configuration
# ========================================
VIN_DECODER_API_URL=https://vpic.nhtsa.dot.gov/api
VIN_DECODER_TIMEOUT=10

# ========================================
# Logging Configuration
# ========================================
LOG_CHANNEL=daily
LOG_LEVEL=debug

# ========================================
# Business Settings
# ========================================
BUSINESS_NAME="Your Auto Repair Shop"
BUSINESS_TAX_RATE=0.0875

# ========================================
# CMS Configuration
# ========================================
CMS_TABLE_PREFIX=cms_
CMS_CACHE_ENABLED=true
CMS_CACHE_TTL=3600
