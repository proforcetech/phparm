# FixItForUs CMS Configuration
# Copy this file to .env and update values for your environment

# Database Configuration
# Note: Use DB_DATABASE and DB_USERNAME to match main application naming
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=fixitforus_cms
DB_USERNAME=root
DB_PASSWORD=your_password_here
DB_CHARSET=utf8mb4

# Legacy variable names (for backward compatibility)
# DB_NAME=fixitforus_cms
# DB_USER=root

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost
APP_SECRET=your-secret-key-here-min-32-characters

# Cache Settings
CACHE_ENABLED=true
CACHE_DRIVER=file
CACHE_TTL=3600
FILE_CACHE_DIR=./cache

# Session Settings
SESSION_LIFETIME=7200
SESSION_NAME=fixitforus_cms

# Admin Settings
ADMIN_PATH=/admin
